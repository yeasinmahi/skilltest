<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="oval"  >
         <corners android:radius="15dip" />
         <stroke android:width="1dip" android:color="#091739" />
         <gradient android:angle="-90" android:startColor="#095739" android:endColor="#098739"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="oval"  >
         <corners android:radius="15dip" />
         <stroke android:width="1dip" android:color="#15a26c" />
         <solid android:color="#15a26c"/>
     </shape>
 </item>  
<item >
    <shape android:shape="oval"  >
         <corners android:radius="15dip" />
         <stroke android:width="1dip" android:color="#0C514B" />
         <gradient android:angle="-90" android:startColor="#0C814B" android:endColor="#0CB14B" />
     </shape>
 </item>
</selector>